<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-Do App</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }
    </style>
</head>
<body class="bg-gray-100 flex justify-center items-center min-h-screen p-4">

    <!-- Main Container -->
    <div class="bg-white w-[350px] md:w-[400px] rounded-2xl shadow-xl p-6">
        
        <!-- Header -->
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-lg font-semibold text-gray-700">
                <% const weekday = ["Sunday","Monday","Tuesday","Wednesday","Thursday","Friday","Saturday"];
                
                const d = new Date();
                let day = weekday[d.getDay()];%>
                <%= day %> To-Do List
            </h2>
            <button class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition">
                <a href="/addTask">Add New</a>
            </button>
        </div>

        <!-- Task List -->
        <div class="space-y-4">
            <% tasks.forEach(task => { %>
                <div class="flex items-center justify-between bg-gray-50 p-4 rounded-lg shadow-sm">
                    
                    <!-- Task Name -->
                    <p class="<%= task.completed ? 'line-through text-gray-400' : 'text-gray-800' %>">
                        <%= task.task %>
                    </p>

                    <!-- Actions -->
                    <div class="flex space-x-2">
                        <!-- Complete Button -->
                        <form action="/complete" method="post">
                            <input type="hidden" name="index" value="<%= tasks.indexOf(task) %>">
                            <button class="text-green-500 hover:text-green-700">
                                âœ…
                            </button>
                        </form>

                        <!-- Delete Button -->
                        <form action="delete" method="post">
                            <input type="hidden" name="index" value="<%= tasks.indexOf(task) %>">
                            <button class="text-red-500 hover:text-red-700">
                                ðŸ—‘
                            </button>
                        </form>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

</body>
</html>
